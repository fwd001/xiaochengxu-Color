/* pages/edit/edit.wxss */
page {
  height: 100%;
}

.container-edit {
  height: 100%;
  position: relative;
  /* padding-top: 195rpx; */
  box-sizing: border-box;
  background-color: #efeff4;
}

/* 头部 */

.header {
  width: 100%;
  height: 195rpx;
  background-color: #494949;
  position: fixed;
  top: 0;
  z-index: 1;
}
.header .cancel {
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  color: #fff;
}
.header .save {
  position: absolute;
  bottom: 20rpx;
  right: 5%;
  color: #fff;
}

/* 输入框 */
.section {
  margin-top: 30rpx;
  height: 46%;

}

.section textarea {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 0rpx 18rpx;
}